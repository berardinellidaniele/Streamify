@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cronologia";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<head>
    <style>
        .dataTables_info,
        .dataTables_paginate,
        .dataTables_filter {
            color: white !important;
        }

            .dataTables_filter input {
                background-color: black !important;
                color: white !important;
            }

            .dataTables_paginate .previous,
            .dataTables_paginate .next,
            .dataTables_paginate .paginate_button {
                color: white !important;
                border: 1px solid white !important;
            }

        .dataTables_length select,
        .dataTables_length label {
            color: white !important;
        }

            .dataTables_length select option {
                background-color: black !important;
                color: white !important;
            }

        .dataTables_paginate .paginate_button {
            border: 1px solid white !important;
            background-color: black !important;
        }

            .dataTables_paginate .paginate_button:disabled {
                color: gray !important;
                border-color: gray !important;
                background-color: black !important;
            }

        .dataTables_length select {
            background-color: black !important;
            color: white !important;
        }

            .dataTables_length select option {
                background-color: black !important;
                color: white !important;
            }
    </style>
</head>

<div class="container mt-4">
    <h2 class="text-center">Cronologia</h2>

    <div class="row">
        <div class="col-md-6">
            <label for="dataInizio">Data Inizio:</label>
            <input type="date" id="dataInizio" class="form-control">
        </div>
        <div class="col-md-6">
            <label for="dataFine">Data Fine:</label>
            <input type="date" id="dataFine" class="form-control">
        </div>
    </div>
    <button id="filtraDate" class="btn btn-primary mt-3">Filtra</button>
    <button id="reset" class="btn btn-secondary mt-3">Reset Filtro</button>
    <br><br>

    <table id="cronologiaTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID Cronologia</th>
                <th>Nome Contenuto</th>
                <th>Data Inizio</th>
                <th>Stato</th>
                <th style="width: 10%;">Azione</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var elemento in ViewBag.Cronologia)
            {
                <tr>
                    <td>@elemento.ID_Cronologia</td>
                    <td>@elemento.Nome</td>
                    <td>@elemento.Data_Inizio.ToString("yyyy-MM-dd")</td>
                    <td>@elemento.Stato</td>
                    @if(elemento.Stato == "In corso") {
                        <td>
                            <button class="btn btn-success finisci" data-id="@elemento.ID_Cronologia">Finisci di Guardare</button>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/cronologia.js"></script>

