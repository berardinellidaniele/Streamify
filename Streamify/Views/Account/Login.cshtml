@using Streamify.ViewModels
@model loginviewmodel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link rel="stylesheet" href="~/css/login-register.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="account-container">
    <div class="account-box">
        <div class="text-center mb-4">
            <h2>Login</h2>
        </div>
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Inserisci la tua email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 password-wrapper">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" type="password" id="password" placeholder="Inserisci la tua password" />
                    <span class="input-group-text">
                        <i class="fas fa-eye toggle-password" data-toggle="password"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <input type="submit" value="Login" class="btn btn-success w-100" />
            <p class="text-center mt-3">
                Non hai un account? <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Registrati</a>
            </p>
        </form>
    </div>
</div>
